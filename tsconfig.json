{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "assets/*": ["./src/assets/*"],
      "components/*":["./src/components/*"],
      "lib/*": ["./src/lib/*"],
      "features/*": ["src/features/*"],
    },
    "types": ["vite/client"],
    "allowJs": true,
    "esModuleInterop": true, // for dayjs
    "allowSyntheticDefaultImports": true, // for dayjs

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  // need to include eslintrc.cjs to be in sync
  "include": ["src", ".eslintrc.cjs", "vite.config.ts", "wdyr.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
